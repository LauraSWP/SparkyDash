{
  "name": "SparkyDash",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "",
  "update_url": "https://github.com/LauraSWP/SparkyDash.git",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js",
      "src/page_action/pokemon.js",
      "src/page_action/page_action.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://code.jquery.com; object-src 'self'",
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*",
    "declarativeContent",
    "webNavigation",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "css": ["src/styles/theme.css"]
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/inject/inject.js",
        "js/jquery/jquery.min.js",
        "content.js",
        "src/page_action/page_action.js"
      ]
    },
    {
      "matches": ["https://*/*", "http://*/*", "file:///*/*"],
      "run_at": "document_idle",
      "js": ["src/page_action/page_action.js"]
    }
  ],
   "web_accessible_resources": [
     "src/page_action/page_action.js",
     "sparky.html"
   ]
}
